/* pages/sonofkami/opencs/index.wxss */
page {
  background: #eee;
}

.bg {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login {
  width: 100%;
  height: 370rpx;
  background: #eee;
}

.loginbox {
  width: 90%;
  display: flex;
  align-items: center;
  padding-top: 38rpx;
  margin: 0 auto;
  position: relative;
}

.headImg {
  height: 110rpx;
  width: 110rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
}

.isgetavatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.djdl {
  padding-left: 25rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #666666;
}

.logininfobox {
  padding-top: 15rpx;
  margin-left: 31rpx;
}

.loginName {
  color: #333333;
  font-weight: 600;
  line-height: 36rpx;
}

.loginphone1 {
  height: 50%;
  color: #666666;
  font-size: 14px;
  padding-top: 19rpx;
  text-align: left;
  padding-left: 0;
  font-weight: 400;
  z-index: 21;
}

.loginphone {
  height: 50%;
  color: #666666;
  font-size: 14px;
  padding-top: 19rpx;
  text-align: left;
  padding-left: 0;
  font-weight: 400;
}

.loginArrow {
  position: absolute;
  width: 60rpx;
  right: 0rpx;
}

.numberbox {
  width: 88%;
  height: 150rpx;
  margin: 40rpx auto 0 auto;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #5d88ff;
  border-radius: 10rpx;
}

.numberboxtag {
  text-align: center;
  color: #fff;
}

.whitebox {
  width: 90%;
  border-radius: 10rpx;
  background: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0px 0px 6px 0px rgba(16, 28, 32, 0.14);
}

.whiteboxtitle {
  height: 32rpx;
  width: 90%;
  padding-top: 29rpx;
  margin-left: 33rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 600;
  color: #333333;
}

.productService {
  width: 100%;
  margin: 10rpx auto 0 auto;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.productServiceTag {
  width: 25%;
  margin-top: 40rpx;
  text-align: center;
}

.productServicePic image {
  width: 70rpx;
  height: 70rpx;
}

.productServiceText {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}

.databox {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: relative;
  margin-top: 30rpx;
  position: relative;
}

.databoxleft {
  text-align: center;
}

.databoxleft :nth-child(1) {
  font-size: 86rpx;
  line-height: 86rpx;
  display: inline-block;
  margin: 0 auto;
}

.databoxleft :nth-child(2) {
  font-size: 36rpx;
  color: hsl(350, 100%, 77%);
  display: inline-block;
  position: absolute;
}

.databoxleft :nth-child(3) {
  font-size: 32rpx;
  color: #999999;
}

.databoxright {
  width: 300rpx;
  height: 250rpx;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.databoxrighttag {
  display: flex;
  justify-content: flex-start;
}

.databoxrighttag :nth-child(1) {
  color: #999;
}

.databoxrighttag :nth-child(2) {
  padding-left: 20rpx;
}

.theline {
  border-top: 1rpx solid #eee;
  width: 90%;
  margin: 30rpx auto 30rpx auto;
}

.productData {
  width: 88%;
  margin: 40rpx auto 0 auto;
  display: flex;
  justify-content: space-between;
}

.productDataTag {
  text-align: center;
}

.productDataNumber {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.productDataText {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}