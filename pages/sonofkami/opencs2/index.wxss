/* pages/sonofkami/opencs2/index.wxss */
page {
  background: rgb(245, 245, 245);
}

.searchbox {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  z-index: 999;
  background: #fff;
}

.searchboxinput {
  width: 550rpx;
  height: 70rpx;
  background: #eee;
  padding-left: 20rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
}

.searchboxinput input {
  width: 100%;
}

.search {
  font-size: 30rpx;
}

.setbg {
  /* height: 2000rpx; */
  padding-bottom: 1rpx;
  margin-top: 100rpx;
}

/* tab页样式 */

.swiper-tab {
  width: 100%;
  text-align: center;
  position: fixed;
  z-index: 999;
  background-color: #fff;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0px 4px 6px 0px rgba(24, 44, 73, 0.04);
}

.swiper-tab-left {
  width: 60%;
  text-align: center;
  line-height: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}

.swiper-tab-right {
  width: 80rpx;
  height: 50rpx;
  background: #eee;
  border-radius: 5rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999999;
}

.swiper-tab-list {
  font-size: 32rpx;
  font-weight: 500;
  font-family: PingFang SC;
  display: block;
  height: 80rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative
}

.on {
  color: #333333;
  font-weight: bold;
  /* border-bottom: 5rpx solid hsl(207, 56%, 57%); */
}

.smallBlue {
  width: 40rpx;
  height: 8rpx;
  margin: -8rpx auto 0 auto;
  /* position: absolute; */
  /* bottom: 0; */
  /* left: 45%; */
  background-color: hsl(207, 56%, 57%);
  /* border-bottom: 8rpx solid hsl(207, 56%, 57%); */
  border-radius: 4rpx;
}

.swiper-box {
  display: block;
  /* height: 820rpx !important; */
  width: 100%;
  /* overflow: hidden; */
  overflow: scroll;
}

