/* pages/sonofkami/test21/index.wxss */
.headbox {
  width: 100vw;
  color: red;
  text-align: center;
  font-size: 38rpx;
  line-height: 38rpx;
  padding-top: 20rpx;
  position: relative;
  z-index: 99;
}

.score {
  font-size: 58rpx;
  font-family: fantasy;
}

.countdown {
  position: absolute;
  right: 20rpx;
  top: 0;
  color: black;
}

.start {
  margin-top: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* animation: swordartonline 0.2s infinite; */
}

@keyframes swordartonline {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(1.5);
  }
}

.lake {
  width: 100vw;
  height: 50vh;
  background: rgb(148, 212, 212);
  position: absolute;
  top: 50%;
  z-index: 99;
}

.shrimp {
  font-size: 50rpx;
  z-index: 98;
  position: absolute;
  bottom: 100rpx;
}