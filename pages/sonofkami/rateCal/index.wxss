/* pages/sonofkami/rateCal/index.wxss */
/* tab页样式 */
.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  position: fixed;
  z-index: 999;
  background-color: #fff;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: block;
  height: 80rpx;
  width: 33.33%;
  color: #777777;
  border-bottom: 1rpx solid #f5f5f5;
}

.on {
  color: black;
  font-weight: bold;
  border-bottom: 5rpx solid hsl(207, 56%, 57%);
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

/* .swiper-box view {
  text-align: center;
} */

swiper-item {
  overflow: scroll;
  margin-top: 100rpx;
}


/* 内容 */
.rateCalForm {
  width: 90%;
  /* height: 100%; */
  margin: 0 auto;
}

.instructions {
  display: inline-block;
  position: absolute;
  right: 50rpx;
  width: 125rpx;
  height: 50rpx;
  font-size: 20rpx;
  background: #7AB0FF;
  color: #fff;
  line-height: 45rpx;
  text-align: center;
  border-radius: 8rpx;
}

.rateCalForm input {
  width: 100%;
  height: 80rpx;
  border-radius: 15rpx;
  background: #f5f5f5;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
  text-align: center;
}

.oneph {
  text-align: center;
  font-size: 25rpx;
  color: #bbbbbb;
}

.rateCalForm text {
  font-size: small;
}


/* 底部按钮 */
.bottomBtn {
  /* display: flex;
  justify-content: space-between;
  margin-top: 100rpx;
  margin-bottom: 100rpx; */
  position: fixed;
  bottom: 0;
  background: #000;
  width: 100%;
  height: 80rpx;
}

.bottomBtn :nth-child(1) {
  background: #fff;
  border: 1rpx solid #eee;
  font-weight: normal;
  font-size: 30rpx;
  color: rgb(104, 104, 104);
  width: 25%;

}

.bottomBtn :nth-child(2) {
  background: linear-gradient(to right, #7CD3EE, #7AB0FF);
  font-weight: normal;
  font-size: 30rpx;
  color: #ffffff;
  width: 60%;
}


/* 计算结果 */
.jsjg {
  font-size: small;
}

.resultCal {
  margin-top: 20rpx;
}

.resultCalOne {
  margin-top: 20rpx;
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #f5f5f5;
  border-radius: 15rpx;
}

.resultCalOne view {
  text-align: center;
  font-weight: bold;
}

.resultCalOne text {
  text-align: center;
  font-size: 23rpx;
  font-weight: normal;
  color: rgb(104, 104, 104);
}

.resultCalTwo {
  margin-top: 20rpx;
  width: 100%;
  height: 280rpx;
  background: #f5f5f5;
  border-radius: 15rpx;
}

.resultCalTwoText {
  width: 90%;
  margin: 0 auto;
  font-size: 23rpx;
  font-weight: normal;
  color: rgb(104, 104, 104);
}

.resultCalTwoBtn {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.resultCalTwoBtn button {
  font-size: 25rpx;
  font-weight: normal;
  border: 1rpx solid rgb(104, 104, 104);
  border-radius: 15rpx;
  color: rgb(104, 104, 104);
}

/* 等额本金 */
.cebjInput2 {
  margin-top: 20rpx;
}

.cebjInput2 view {
  display: inline-block;
  display: flex;
  align-items: center;
}

.cebjInput2 input {
  margin: 0 30rpx 0 30rpx;
  width: 130rpx;
}