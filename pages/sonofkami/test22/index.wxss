/* pages/sonofkami/test22/index.wxss */
.detail-page {
  width: 93%;
  height: 100%;
  margin: 0 auto;
  position: relative;
}

.poptitle {
  margin: 20rpx auto 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.poptitle image {
  width: 30rpx;
  height: 30rpx;
}

.popbigbox {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 45rpx;
  position: relative;
}

.popbigboxtag {
  position: absolute;
  top: 36%;
  left: 60%;
  font-size: 28rpx;
}

.popform {
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 30rpx;
}

.popform input {
  border: 2rpx solid #333;
  border-radius: 8rpx;
  width: 90%;
  height: 80rpx;
  padding-left: 10rpx;
  margin-top: 30rpx;
}

.poptips {
  font-size: 26rpx;
}

.popbottom {
  position: absolute;
  bottom: 55rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.popbottomleft {
  width: 60%;
  height: 80rpx;
  border-radius: 8rpx;
  background: #999;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.popbottomright {
  width: 40%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}