/* pages/components/cardbag/index.wxss */
.bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgb(0, 0, 0, 0.3);
  z-index: 900;
}

.midbox {
  width: 450rpx;
  height: 610rpx;
  background: #fff;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  /* margin: 0 auto; */
  box-shadow: 5rpx 5rpx 100rpx #3b65f0;
  z-index: 901;
  /* animation: rotate 5s linear infinite; */
}

.imdboximg{
  width: 100%;
  height: 100%;
}



@keyframes rotate {
  0% {
    transform: rotate(0);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}